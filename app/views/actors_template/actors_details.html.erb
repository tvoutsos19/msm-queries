<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name%>
  </dd>

  <dt>
    DOB
  </dt>
  <dd>
    <%= @the_actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @the_actor.image%>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
  <%= time_ago_in_words(@the_actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at)%> ago
  </dd>
</dl>

<table border="1">
  <tr>
  <% @character.each do |a_character| %>
  <tr>
    <td><%= Movie.where({ :id => a_character.movie_id}).at(0).title %></td>
    <td><%= Movie.where({ :id => a_character.movie_id}).at(0).year %></td>
    <td>
    <% d = Director.where({ :id => Movie.where({ :id => a_character.movie_id}).at(0).director_id}).at(0)%>
    <%= d.name%>
    </td>
    <td>
    <%= a_character.name%>
    </td>
    <td>
      <a href="/movies/<%= Movie.where({ :id => a_character.movie_id}).at(0).id %>">
      Show details
      </a>
    </td>
  </tr>
<% end %>
  </tr>
</table>